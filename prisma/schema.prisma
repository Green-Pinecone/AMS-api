generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model MasterEmployee {
  first_name        String
  last_name         String
  emp_id            Int      @id(map: "Employee_pkey") @default(autoincrement())
  dob               DateTime
  gender            String
  personal_email    String
  work_email        String
  contact_no        String
  address           String
  hire_date         DateTime
  employment_status String
  employment_type   String
}

model MasterDepartment {
  dept_id     Int    @id @default(autoincrement())
  head_emp_id String
  dept_name   String @unique
  location    String
  budget      Float
}
